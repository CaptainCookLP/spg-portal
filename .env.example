# Umgebungsvariablen für SPG Portal
# Kopiere diese Datei zu .env und fülle die Werte aus

# ============================================================================
# DATENBANK KONFIGURATION (MSSQL)
# ============================================================================
DB_TYPE=mssql
DB_SERVER=dein-server.example.de
DB_USER=dein-benutzer
DB_PASSWORD=dein-passwort
DB_DATABASE=deine-datenbank
DB_PORT=1433
DB_ENCRYPT=false

# ============================================================================
# SERVER KONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ============================================================================
# SESSION KONFIGURATION
# ============================================================================
SESSION_DAYS=30

# ============================================================================
# SMTP / E-MAIL KONFIGURATION
# ============================================================================
SMTP_HOST=smtp.strato.de
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=deine-email@example.de
SMTP_PASSWORD=dein-smtp-passwort
SMTP_FROM_NAME=KG Wispelten - Mitgliederportal
SMTP_FROM_EMAIL=deine-email@example.de

# ============================================================================
# ADMIN KONFIGURATION
# ============================================================================
ADMIN_MEMBER_ID=0000000002
ADMIN_EMAIL=admin@example.de

# ============================================================================
# ORGANISATION
# ============================================================================
ORG_NAME=KG Wispelten Mitgliederportal
LOGO_URL=https://example.de/logo.png
DSGVO_URL=https://example.de/datenschutz

# ============================================================================
# TEST KONFIGURATION (NUR FÜR ENTWICKLUNG)
# ============================================================================
# TEST_EMAIL: Diese Email kann sich ohne Passwort anmelden
# Entferne diese wenn du Produktion deployst!
TEST_EMAIL=fabian.koch1998@gmail.com
TEST_PASSWORD=Start1234!
REQUIRE_PASSWORD=true

# ============================================================================
# RATE LIMITING (alle Werte in Millisekunden)
# ============================================================================
# Allgemeine Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Login Rate Limiting (separat für Sicherheit)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=30
